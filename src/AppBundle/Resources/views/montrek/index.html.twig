{% extends 'base.html.twig' %}
{% block menu %}{% include 'menu/index.html.twig' %}{% endblock %}
{% block body %}
<div class="row wrap-row">
    <div class="col-lg-offset-1 col-lg-10 text-center ">
    <h1>Liste des randonnées effectuées</h1>
    </div>
    <div class="panel panel-default col-lg-offset-1 col-lg-10">
        <table class="table">
            <div>
                <thead >
                    <tr >
                        <th>Id</th>
                        <th>Date</th>
                        <th>Temps réalisé</th>
                        <th>Départ (date/heure)</th>
                        <th>Arrivée (date/heure)</th>
                        <th>Indice méteo</th>
                        <th>Metéo (description)</th>
                        <th>Randonneur</th>
                        <th>Randonnée</th>
                        <th>Actions</th>
                    </tr>
                </thead>
            </div>
            <tbody>
            {% for montrek in montreks %}
                <tr>
                    <td><a href="{{ path('montrek_show', { 'id': montrek.id }) }}">{{ montrek.id }}</a></td>
                    <td>{% if montrek.jour %}{{ montrek.jour|date('d-m-Y') }}{% endif %}</td>
                    <td>{% if montrek.temps %}{{ montrek.temps|date('H:i:s') }}{% endif %}</td>
                    <td>{% if montrek.depart %}{{ montrek.depart|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>{% if montrek.arrivee %}{{ montrek.arrivee|date('d-m-Y H:i:s') }}{% endif %}</td>
                    <td>{{ montrek.meteo }}</td>
                    <td>{{ montrek.meteotxt }}</td>
                    <td>{{ montrek.randonneur.username }}</td>
                    <td>{{ montrek.randonnee.libelle }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('montrek_show', { 'id': montrek.id }) }}">Détails</a>
                            </li>
                            <li>
                                <a href="{{ path('montrek_edit', { 'id': montrek.id }) }}">Modification</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="col-lg-offset-1 col-lg-10" >
        <li class="btn bd-bl btn-bl ">
            <a href="{{ path('montrek_new') }}">Créer une nouvelle entrée</a>
        </li>
    </div>
{% endblock %}
{% block footer %}{% include 'footer/index.html.twig' %}{% endblock %}
