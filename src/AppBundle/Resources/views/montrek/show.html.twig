{% extends 'base.html.twig' %}

{% block body %}
    <h1>Montrek</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ montrek.id }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{% if montrek.jour %}{{ montrek.jour|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Temps</th>
                <td>{% if montrek.temps %}{{ montrek.temps|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Départ</th>
                <td>{% if montrek.depart %}{{ montrek.depart|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Arrivée</th>
                <td>{% if montrek.arrivee %}{{ montrek.arrivee|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Indice Méteo</th>
                <td>{{ montrek.meteo }}</td>
            </tr>
            <tr>
                <th>Meteo (texte)</th>
                <td>{{ montrek.meteotxt }}</td>
            </tr>
            <tr>
                <th>Randonneur</th>
                <td>{{ montrek.randonneur.username }}</td>
            </tr>
            <tr>
                <th>Randonnée</th>
                <td>{{ montrek.randonnee.libelle }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('montrek_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('montrek_edit', { 'id': montrek.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
